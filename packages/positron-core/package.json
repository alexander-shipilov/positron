{
    "name": "positron-core",
    "version": "0.1.26",
    "description": "Core library for positron-ui",
    "main": "./index.js",
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "cross-env": "^5.1.3",
        "eslint": "^4.15.0",
        "flow-bin": "^0.63.1",
        "jest": "^22.0.5",
        "rimraf": "^2.6.2"
    },
    "scripts": {
        "build": "npm run build-lib && npm run build-index",
        "build-lib": "rimraf lib && babel ./src --out-dir ./lib --ignore __mocks__,__tests__",
        "build-index": "rimraf index.js && babel-node ../../utils/make-index.js ./src --root ./lib --out-file ./index.js",
        "eslint": "eslint ./src",
        "flow": "flow",
        "prepublish": "npm run build",
        "test": "jest --no-cache --runInBand",
        "test-watch": "npm run test -- --watchAll"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alexander-shipilov/positron.git"
    },
    "keywords": [
        "positron-ui",
        "positron-core"
    ],
    "author": "Alexander Shipilov",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/alexander-shipilov/positron/issues"
    },
    "homepage": "https://github.com/alexander-shipilov/positron#readme"
}
