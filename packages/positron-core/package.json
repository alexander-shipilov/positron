{
    "name": "positron-core",
    "version": "0.1.29",
    "description": "Core library for positron-ui",
    "main": "./lib/index.js",
    "jsnext:main": "./src/index.js",
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "cross-env": "^5.2.0",
        "eslint": "^5.6.0",
        "flow-bin": "^0.81.0",
        "jest": "^23.6.0",
        "rimraf": "^2.6.2"
    },
    "scripts": {
        "build": "npm run build-lib",
        "build-lib": "rimraf lib && cross-env BABEL_ENV=production babel ./src --out-dir ./lib",
        "eslint": "eslint ./src",
        "flow": "flow",
        "prepublish": "npm run build",
        "test": "jest --no-cache --runInBand",
        "test-watch": "npm run test -- --watchAll"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alexander-shipilov/positron.git"
    },
    "keywords": [
        "positron-ui",
        "positron-core"
    ],
    "author": "Alexander Shipilov",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/alexander-shipilov/positron/issues"
    },
    "homepage": "https://github.com/alexander-shipilov/positron#readme"
}
